@page
@model WebVisualGame.Pages.CreateGameModel
@{
    ViewData["Title"] = "CreateGame";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Создание игры</h4></div>
    <div class="panel-body">
        <form asp-action="Register" method="post" enctype="multipart/form-data">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="@Model.Title">Название:</label>4545
                <input asp-for="@Model.Title" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description">Описание:</label>
                <input asp-for="@Model.Description" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SourceCode">Код игры</label>
                <input type="file" asp-for="@Model.SourceCode" />
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit" asp-page-handler="Create">Создать!</button>
            </div>
        </form>
    </div>
</div>

<h1>Результат:</h1>
<div>Ошибка: @Model.Error</div>
<div>Название: @Model.Title</div>
<div>Описание: @Model.Description</div>
<div>Код: @Model.SourceCodeContent</div>