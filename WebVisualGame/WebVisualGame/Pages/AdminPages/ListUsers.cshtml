@page
@model WebVisualGame.Pages.ListUsersModel
@{
    ViewData["Title"] = "ListUsers";
}

<h2>Список пользователей</h2>
<form method="post">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Логин</th>
                <th>Пароль</th>
                <th>Email</th>
                <th>Уровень доступа</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Login</td>
                    <td>@user.Password</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.AccessLevel == 1)
                        {<p>Admin</p>}
                        else
                        {<p>User</p>}
                    </td>
                    <td>
                        @if (user.Id != Model.AdminId)
                        {
                            <a asp-page="./EditUser" asp-route-id="@user.Id">Редактировать</a>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id">Удалить</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
