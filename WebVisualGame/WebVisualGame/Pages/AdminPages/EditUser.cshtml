@page "{id:int}"
@model WebVisualGame.Pages.AdminPages.EditUserModel

@{
    ViewData["Title"] = "EditUser";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Редактирование (UserId - @Model.user.Id )</h4></div>
    <div class="panel-body">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="user.Id" type="hidden" />
            <ul class="text-danger">
                @foreach (var error in Model.ServerErrors)
                {
                    <li>@error</li>
                }
            </ul>
            <div class="form-group">
                <label asp-for="user.FirstName">Имя:</label>
                <input asp-for="user.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="user.LastName">Фамилия:</label>
                <input asp-for="user.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="user.Login">Логин:</label>
                <input asp-for="user.Login" />
            </div>
            <div class="form-group">
                <label asp-for="user.Password">Пароль:</label>
                <input asp-for="user.Password" />
            </div>
            <div class="form-group">
                <label asp-for="user.PasswordConfirm">Пароль (повторно):</label>
                <input asp-for="user.PasswordConfirm" />
            </div>
            <div class="form-group">
                <label asp-for="user.Email">Email:</label>
                <input asp-for="user.Email" />
            </div>
            <div class="form-group">
                <label asp-for="user.AccessLevel"><abbr title="0 - User; 1 - Admin">Уровень доступа:</abbr></label>
                <input asp-for="user.AccessLevel" />
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit">Сохранить!</button>
            </div>
        </form>
    </div>
</div>

