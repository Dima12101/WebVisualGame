@page
@model PlayingIFrameModel
@{
}
<style>
body { background-image: url("https://avatars1.githubusercontent.com/u/32986168?s=460&v=4"); }
</style>

<p>@Model.Point.Text</p>

<div id="ListAnswers">
	<table class="table table-striped table-bordered">
		<tbody>
			@for (int i = 0; i < Model.Transitions.Length; ++i)
			{
				<tr>
					<td>@Model.Transitions[i].Text
					</td>
					<td>
						<form method="POST">
							<button type="submit" asp-page-handler="Answer" asp-route-index_transition="@i">Answer</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
