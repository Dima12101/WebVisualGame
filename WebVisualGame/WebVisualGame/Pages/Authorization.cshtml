@page
@model WebVisualGame.Pages.AuthorizationModel
@{
    ViewData["Title"] = "Authorization";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Авторизация</h4></div>
    <div class="panel-body">
        <form asp-action="Authorization" method="post">
            <div class="text-danger">@Model.Error</div>
            <br />
            <div class="form-group">
                <label asp-for="Login">Ваш Логин:</label>
                <input asp-for="Login" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Ваш Пароль:</label>
                <input type="password" asp-for="Password" />
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit">Авторизироваться!</button>
            </div>
        </form>
    </div>
</div>