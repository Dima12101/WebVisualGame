@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<br />
<div class="container">
    <div class="navbar-collapse collapse">
        @if (Model.isAuthorization == true)
        {
            <h3>Здравствуй @Model.UserName !</h3>
        }
        <ul class="nav navbar-nav">
            @if (Model.isAuthorization == true)
            {
                <li>
                    <form method="POST">
                        <button type="submit" class="btn btn-primary" asp-page-handler="Exit">Выход</button>
                    </form>
                </li>
            }
            else
            {
                <li><a class="btn btn-primary" asp-page="/Registration">Зарегистрироваться</a></li>
                <li><a class="btn btn-primary" asp-page="/Authorization">Авторизироваться</a></li>
            }
        </ul>
    </div>
</div>

<div id="ListGame">
    
</div>