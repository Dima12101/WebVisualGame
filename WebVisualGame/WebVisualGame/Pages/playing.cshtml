@page
@model WebVisualGame.Pages.PlayingModel
@{
    ViewData["Title"] = "Игра";
}

<p>@Model.Point.Text</p>

<div id="ListAnswers">
    <table class="table table-striped table-bordered">
        <tbody>
            @for (int i = 0; i < Model.Transitions.Length; ++i)
            {
                <tr>
                    <td>
                        @Model.Transitions[i].Text
                    </td>
                    <td>
                        <form method="POST">
                            <button type="submit" asp-page-handler="Answer" asp-route-id_transition="@Model.Transitions[i].Id">Answer</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

