@page
@model PageGameModel
@{
}


<head>
	<style rel="stylesheet">
		#BlockUser {
			display: block;
			width: 200px;
			margin-top: 10px;
			margin-bottom: 10px;
			border-color: black;
		}

		.UserButton {
			display: block;
			padding: 5px;
			margin: 10px;
			border-color: black;
			background-color: #e2e2e2;
		}
	</style>
</head>

<h3>Название: @Model.Game.Title</h3>

<h3>Description: @Model.Game.Description</h3>

<h3>Rating: @Model.Game.Rating</h3>

<img style="width:100px; height:100px;" src="@Model.Game.UrlIcon" alt="GameIcon" />

<form method="POST">
	<button class="UserButton" type="submit" asp-page-handler="StartGame">Играть</button>
</form>

@if (Model.UserId != 0)
{
	<div class="form-group">
		<label asp-for="@Model.Comment">Комментарий:</label>
		<input asp-for="@Model.Comment" />
	</div>
	<ul class="text-danger">

		<li>@Model.Error</li>

	</ul>

	//<input type="radio" name="1" value=@Model.Rating>

	@Html.RadioButtonFor(m => m.Rating, 1)
	@Html.RadioButtonFor(m => m.Rating, 2)
	@Html.RadioButtonFor(m => m.Rating, 3)
	@Html.RadioButtonFor(m => m.Rating, 4)
	@Html.RadioButtonFor(m => m.Rating, 5)

	<form method="POST">
		<button class="UserButton" type="submit" asp-page-handler="SendComment">Оценить</button>
	</form>
}

<h3>Комментарии:</h3>
<div id="ListCommets">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Имя</th>
				<th>Комментарий</th>
				<th>Оценка</th>
				<th>Дата</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var review in Model.Reviews)
			{
				@if (review.Comment != "")
				{
					<tr>
						<td>@review.UserName</td>
						<td>@review.Comment</td>
						<td>@review.Rating</td>
						<td>@review.Date</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>