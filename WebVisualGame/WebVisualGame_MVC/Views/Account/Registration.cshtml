@model WebVisualGame_MVC.Models.PageModels.AccountModel.RegistrationModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="my-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Регистрация</h4></div>
    <div class="panel-body">
        <form asp-action="Registration" asp-controller="Account" method="post">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <ul class="text-danger">
                @foreach (var error in Model.Errors)
                {
                    <li>@error</li>
                }
            </ul>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.FirstName">Ваше Имя:</label>
                <input type="text" asp-for="userInfo.FirstName" />
                <span asp-validation-for="userInfo.FirstName" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.LastName">Ваша Фамилия:</label>
                <input type="text" asp-for="userInfo.LastName" />
                <span asp-validation-for="userInfo.LastName" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.Login">Ваш Логин:</label>
                <input type="text" asp-for="userInfo.Login" />
                <span asp-validation-for="userInfo.Login" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.Email">Ваш Email:</label>
                <input type="text" asp-for="userInfo.Email" />
                <span asp-validation-for="userInfo.Email" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.Password">Ваш Пароль:</label>
                <input type="password" asp-for="userInfo.Password" />
                <span asp-validation-for="userInfo.Password" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="userInfo.ConfirmPassword">Ваш Пароль (повторно):</label>
                <input type="password" asp-for="userInfo.ConfirmPassword" />
                <span asp-validation-for="userInfo.ConfirmPassword" class="text-danger" />
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit">Зарегистрироваться!</button>
            </div>
        </form>
    </div>
</div>
