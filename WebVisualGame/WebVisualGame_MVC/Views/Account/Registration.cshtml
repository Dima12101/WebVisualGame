@model WebVisualGame_MVC.Models.PageModels.AccountModel.RegistrationModel
@{
    ViewData["Title"] = "Регистрация";
}

<style>
    .field-labels {
        width: 15%
    }

    .column {
        display: table
    }
    .register-panel {
        margin: auto 20%
    }
 </style>

<div class="register-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Регистрация</h4></div>
    <div class="panel-body">
        <form asp-action="Registration" asp-controller="Account" method="post">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <ul class="text-danger">
            @foreach (var error in Model.Errors)
            {
                <li>@error</li>
            }
            </ul>
            <div class="form-group">
                <label class="field-labels" asp-for="FirstName">Ваше Имя:</label>
                <input type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"/>
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="LastName">Ваша Фамилия:</label>
                <input type="text" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"/>
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Login">Ваш Логин:</label>
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login" class="text-danger"/>
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Email">Ваш Email:</label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Password">Ваш Пароль:</label>
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"/>
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="ConfirmPassword">Ваш Пароль (повторно):</label>
                <input type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"/>
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit">Зарегистрироваться!</button>
            </div>
        </form>
    </div>
</div>

