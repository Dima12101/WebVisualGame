@model WebVisualGame_MVC.Models.PageModels.AccountModel.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<style>
    .image {
        margin-left: 10px;
        margin-right: 10px;
    }

    ul {
        list-style-type: none;
    }
    li {
        position: relative;
        margin-top: 5px;
    }

    li ul {
        list-style-type: circle;
        display: none;
        position: absolute;
        background-color:white;
        border:double;
        border-color:#ddd;
        z-index: 1;
    }
    li:hover ul {
        display: block;
    }
</style>

<script type="text/javascript">
    function checkAccept() {
        return window.confirm("Вы точно хотите удалить игру?");
    }
</script>

<div class="register-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Профиль</h4></div>
    <div class="panel-body">
        <table>
            <tr>
                <td width="20%" valign="top">
                    <img class="image" src="@Model.PathUserAvatar" alt="UserAvatar"/>
                </td>
                <td class="column" valign="top">
                    <h3>@Model.UserName</h3>
                    <br />
                    <form method="POST" asp-controller="Account" asp-action="Redaction">
                        <button class="btn btn-default" onsubmit="" type="submit">Редактировать</button>
                    </form>
                </td>
            </tr>
        </table>
        <div>
            <h3>Мои игры:</h3>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Иконка</th>
                        <th>Оценка</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model.UserGames)
                    {
                    <tr>
                        <td>@game.Title</td>
                        <td><img style="width:50px; height:50px;" src="@game.PathIcon" alt="GameIcon" /></td>
                        <td>@game.Rating</td>
                        <td>
                            <ul>
                                <li>
                                    <button class="btn btn-default">Действия</button>
                                    <ul>
                                        <li>
                                            <form asp-controller="Game" asp-action="Main" method="get">
                                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Подробнее</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-controller="Game" asp-action="Redaction" method="get">
                                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Редактировать</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-controller="Game" asp-action="Delete" method="post" onsubmit="return checkAccept();">
                                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Удалить</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </td> 
                    </tr>
                    }
                </tbody>
            </table>
        </div>
</div>



