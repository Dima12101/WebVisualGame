@model WebVisualGame_MVC.Models.PageModels.AccountModel.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<style>
    .profile ul {
        list-style-type: none;
    }
    .profile li {
        position: relative;
        margin-top: 5px;
    }

    .profile li ul {
        list-style-type: circle;
        display: none;
        position: absolute;
        background-color: white;
        border: double;
        border-color: #ddd;
        z-index: 1;
    }
    .profile li:hover ul {
        display: block;
    }
</style>

<script type="text/javascript">
    function checkAccept() {
        return window.confirm("Вы точно хотите удалить игру?");
    }
</script>

<div class="register-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Профиль</h4></div>
    <div class="panel-body profile">
        <table class="table table-bordered">
            <tr>
                <td width="20%" valign="top">
                    <img class="MyIcon" src="@Model.PathUserAvatar" alt="UserAvatar" />
                </td>
                <td class="column" valign="top">
                    <h3>@Model.UserName</h3>
                    <label>Email: </label>
                    <span>@Model.Email</span>
                    <br />
                    <label>Дата регистрации: </label>
                    <span>@Model.Data</span>
                    <br />
                    <form method="get" asp-controller="Account" asp-action="Redaction">
                        <div class="text-center">
                            <button class="btn btn-default" type="submit">Редактировать</button>
                        </div>
                    </form>
                </td>
            </tr>
        </table>
        <div>
            <h3>Мои игры:</h3>
            <div class="scroll">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Иконка</th>
                            <th>Оценка</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model.UserGames)
                        {
                            <tr>
                                <td>@game.Title</td>
                                <td><img style="width:50px; height:50px;" src="@game.PathIcon" alt="GameIcon" /></td>
                                <td>@game.Rating</td>
                                <td>
                                    <ul>
                                        <li>
                                            <button class="btn btn-default">Действия</button>
                                            <ul>
                                                <li>
                                                    <form asp-controller="Game" asp-action="Main" method="get">
                                                        <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Подробнее</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Game" asp-action="Redact" method="get">
                                                        <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Редактировать</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Game" asp-action="Delete" method="post" onsubmit="return checkAccept();">
                                                        <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Удалить</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



