@model WebVisualGame_MVC.Models.PageModels.AccountModel.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="register-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Профиль</h4></div>
    <div class="panel-body">
        <table>
            <tr>
                <td width="20%" valign="top">
                    <img src="@Model.PathUserAvatar" alt="UserAvatar"/>
                </td>
                <td valign="top">
                    <p>Меня зовут: @Model.UserName</p>
                    <br />
                    <form method="POST" asp-controller="Account" asp-action="Redaction">
                        <button class="btn btn-default" type="submit">Редактировать</button>
                    </form>
                </td>
            </tr>
        </table>
        <div>
            <h3>Мои игры:</h3>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Иконка</th>
                        <th>Оценка</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model.UserGames)
                    {
                    <tr>
                        <td>@game.Title</td>
                        <td><img style="width:50px; height:50px;" src="@game.PathIcon" alt="GameIcon" /></td>
                        <td>@game.Rating</td>
                        <td>
                            <form asp-controller="Game" asp-action="Main" method="get">
                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Подробнее</button>
                            </form>
                        </td>
                        <td>
                            <form asp-controller="Game" asp-action="Redaction" method="get">
                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Редактировать</button>
                            </form>
                        </td>
                        <td>
                            <form asp-controller="Game" asp-action="Delete" method="post">
                                <button type="submit" name="gameIdEncode" value="@WebVisualGame_MVC.Utilities.ProtectData.GetInstance().Encode(game.Id)">Удалить</button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
</div>



