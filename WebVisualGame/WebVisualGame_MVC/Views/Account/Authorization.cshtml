@model WebVisualGame_MVC.Models.PageModels.AccountModel.AuthorizationModel
@{
    ViewData["Title"] = "Authorization";
}

<div class="my-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Авторизация</h4></div>

    <a asp-action="Registration" asp-controller="Account">Регистрация</a>

    <div class="panel-body">
        <div class="text-danger">@ViewBag.Error</div>
        <form asp-antiforgery="true" asp-action="Authorization" asp-controller="Account" method="post">
            <div>
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div class="form-group">
                    <label class="field-labels" asp-for="Login">Ваш Логин:</label>
                    <input type="text" asp-for="Login" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
                <div class="form-group">
                    <label class="field-labels" asp-for="Password">Ваш Пароль:</label>
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="text-center">
                    <button class="btn bg-primary" type="submit">Авторизироваться!</button>
                </div>
            </div>
        </form>
    </div>
</div>

