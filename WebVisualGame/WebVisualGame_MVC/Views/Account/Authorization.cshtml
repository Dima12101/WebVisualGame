@model WebVisualGame_MVC.Models.PageModels.AccountModel.AuthorizationModel
@{
    ViewData["Title"] = "Authorization";
}

@section Styles {
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/authorizationPack/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/authorizationPack/main.css">
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form p-l-55 p-r-55 p-t-178 validate-form" asp-antiforgery="true" asp-action="Authorization" asp-controller="Account" method="post">
                <span class="login100-form-title">
                    Добро пожаловать!
                </span>
                <div class="text-danger">@ViewBag.Error</div>
                <div asp-validation-summary="ModelOnly" />
                <div class="wrap-input100 m-b-16 validate-input" data-validate="Введите ваш Логин">
                    <input class="input100" type="text" asp-for="Login" placeholder="Username" />
                    @*<span class="focus-input100"></span>*@
                </div>
                <div class="wrap-input100 m-b-16 validate-input" data-validate="Введите ваш Пароль">
                    <input class="input100" type="password" asp-for="Password" placeholder="Password" />
                    @*<span class="focus-input100"></span>*@
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Войти
                    </button>
                </div>

                <div class="flex-col-c p-t-10 p-b-40">
                    <span class="txt1 p-b-9">
                        Нет аккаунта?
                    </span>

                    <a asp-action="Registration" asp-controller="Account" class="txt3">
                        Зарегистрироваться!
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/authorizationPack/main.js"></script>
}

