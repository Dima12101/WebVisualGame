@model WebVisualGame_MVC.Models.PageModels.GameModel.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="my-panel panel panel-success">
    <div class="panel-heading text-center"><h4>Создать игру</h4></div>
    <div class="panel-body">
        <form asp-action="Create" asp-controller="Game" method="post" enctype="multipart/form-data">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div class="form-group">
                <label class="field-labels" asp-for="Title">Название:</label>
                <input type="text" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Description">
                    <abbr class="text-danger" title="Необязательно">*</abbr>Описание:
                </label>
                <input type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Icon">
                    <abbr class="text-danger" title="Необязательно">*</abbr>Иконка:
                </label>
                <input type="file" asp-for="Icon" />
                <span asp-validation-for="Icon" class="text-danger" />
            </div>
            <div class="form-group">
                <label class="field-labels" asp-for="Code">Код:</label>
                <input type="file" asp-for="Code" />
                <span asp-validation-for="Code" class="text-danger" />
            </div>
            <div class="text-center">
                <button class="btn bg-primary" type="submit">Создать!</button>
            </div>
        </form>
    </div>
</div>


